<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GetPostMethodActivity">

    <EditText
            android:id="@+id/edt_set_url"
            app:layout_constraintTop_toTopOf="parent"
            android:hint="Input link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <Button
            android:text="Check URL"
            android:id="@+id/btn_check_url"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/edt_set_url"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/txt_url"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@id/btn_check_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</android.support.constraint.ConstraintLayout>